@model BuggerOff.DataAccess.Project
@using BuggerOff.DataAccess;
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Created By
        </dt>
        <dd>
            @{
                BuggerOffEntities db = new BuggerOffEntities();
                AspNetUser createdByUser = db.AspNetUsers.Find(Model.CreatedBy);
            }
            @createdByUser.UserName
        </dd>
        <dt>
            Project Members
        </dt>
        <dd>
            @foreach(var item in Model.AspNetUsers)
            {
                @item.UserName <text><br/></text>
            }   
        </dd>
    </dl>
    Hi!
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
